<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.library.mapper.LibraryStaffMapper">
    <resultMap id="StaffMap" type="libraryStaff">
        <id column="pid" property="pid"/>
        <result column="is_delete" property="isDelete"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    <insert id="insert">
        insert into
            library.staff( username, password, nickname, age, phone, email, create_time, update_time)
        values
            (#{username},#{password},#{nickname},#{age},#{phone},#{email},#{createTime},#{updateTime})
    </insert>
    <select id="findByUsername" resultMap="StaffMap">
        select
            *
        from
            library.staff
        where
            username=#{username}
    </select>
    <select id="findBySid" resultMap="StaffMap">
        select
            *
        from
            library.staff
        where
            sid=#{sid}
    </select>
    <update id="updateInfoByUid">
        update
        library.staff
        set
        <if test="nickname != null">nickname=#{nickname},</if>
        <if test="age != null">age=#{age},</if>
        <if test="phone!=null">phone=#{phone},</if>
        <if test="email!=null">email=#{email},</if>
        update_time=#{updateTime}
        where
        sid=#{sid}
    </update>
    <select id="listAll" resultMap="StaffMap">
        select
            sid,username,nickname, age, phone, email
        from
            library.staff
        where is_delete=0
    </select>
    <update id="deleteBySid">
        update
            library.staff
        set
            is_delete=1
        where
            sid=#{sid}
    </update>
</mapper>